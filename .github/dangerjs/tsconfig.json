{
    "compilerOptions": {
        "module": "commonjs",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "target": "es6",
        "noImplicitAny": true,
        "noUnusedParameters": true,
        "strictNullChecks": true,
        "sourceMap": true,
        "removeComments": true,
        "outDir": "./dist"
    },
    "include": [
        "./*.ts"
    ]
}
