                config BT_LOG_APPL_TRACE_LEVEL_NONE
                    bool "NONE"
                config BT_LOG_APPL_TRACE_LEVEL_ERROR
                    bool "ERROR"
                config BT_LOG_APPL_TRACE_LEVEL_WARNING
