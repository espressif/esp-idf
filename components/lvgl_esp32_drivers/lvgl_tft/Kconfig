        default 10 if LV_TFT_SPI_CLK_DIVIDER_10
        default 12 if LV_TFT_SPI_CLK_DIVIDER_12
        default 16 if LV_TFT_SPI_CLK_DIVIDER_16
        default 20 if LV_TFT_SPI_CLK_DIVIDER_20
